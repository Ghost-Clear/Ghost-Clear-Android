<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F2E35"
    tools:context=".initialHelloPage">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="283dp"
        android:layout_height="76dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="178dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="140dp"
        android:backgroundTint="#1F2E35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstName"
        app:srcCompat="@drawable/ic_next_button" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="249dp"
        android:layout_height="72dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="102dp"
        android:digits="qwertzuiopasdfghjklyxcvbnm, QWERTZUIOPASDFGHJKLYXCVBNM"
        android:ems="10"
        android:hint="Your First Name"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#676767"
        app:layout_constraintStart_toEndOf="@+id/iconImage"
        app:layout_constraintTop_toBottomOf="@+id/lets-introduce" />

    <ImageView
        android:id="@+id/iconImage"
        android:layout_width="63dp"
        android:layout_height="90dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="272dp"
        android:layout_marginEnd="309dp"
        android:layout_marginBottom="369dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.848"
        app:srcCompat="@drawable/ic_icon" />

    <TextView
        android:id="@+id/Hello-text"
        android:layout_width="245dp"
        android:layout_height="76dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="64dp"
        android:text="Hello!"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/lets-introduce"
        android:layout_width="231dp"
        android:layout_height="43dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="32dp"
        android:text="Let's introduce"
        android:textColor="#9C9C9C"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Hello-text" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="69dp"
        android:layout_height="68dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />
</androidx.constraintlayout.widget.ConstraintLayout>